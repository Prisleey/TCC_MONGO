        </footer>
        <!--//END FOOTER -->

        <!-- jQuery, Bootstrap JS. -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="js/jquery-3.2.1.min.js"></script>
        <script src="js/popper.min.js"></script>
        <script src="js/bootstrap.min.js"></script>

        <script>

            $(document).ready(function() {
                $('#btCadastroUser').on('click', function() {
                    $('#cadastro-modal').modal('show');
                });

                $('input:radio[name=tpUser]').on('change', function() {
                    console.log($(this).val());
                    if ($(this).val() == '5b85f4f0d7b3ff3a1899e4c3') { //ALTERAR PARA ID NORMAL (1,2,3,4) E NÃO O OBJECT ID
                        $('#estado').prop('readonly', true);
                        $('#cidade').prop('readonly', true);
                        $('#bairro').prop('readonly', true);
                        $('#telefone').prop('readonly', true);
                    } else {
                        $('#estado').prop('readonly', false);
                        $('#cidade').prop('readonly', false);
                        $('#bairro').prop('readonly', false);
                        $('#telefone').prop('readonly', false);
                    }
                });
            });

            $(window).scroll(function() {
                // 100 = The point you would like to fade the nav in.

                if ($(window).scrollTop() > 100) {
                    $('.fixed').addClass('is-sticky');
                } else {
                    $('.fixed').removeClass('is-sticky');
                };
            });
        </script>
    </body>
</html>