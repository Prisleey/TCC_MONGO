                    $('#cadastro-modal').modal('show');
                    //window.location.replace('cadastro');
                    $.ajax({
                        type: "get",
                        url: "/cadastro",
                        success: function (data) {

                            let dataJson = eval(data);
                            console.log(dataJson);
                            for(let i=0; i<dataJson.length; i++) {
                                let label = $('<label/>').attr({
                                    'class': 'container container'+i,
                                }).appendTo('.optionsTpUser');
                                let input = $('<input/>').attr({
                                    'type': 'radio',
                                    'value': dataJson[i]._id,
                                    'name': 'tpUser'
                                }).appendTo('.container'+i);
                                let span = $('<span/>').attr({
                                    'class' : 'checkmark',
                                    'id' : dataJson[i]._id
                                }).appendTo('.container'+i);
                                document.getElementById(dataJson[i]._id).innerHTML = " "+dataJson[i].desc;

                            }
                        }
                    });
                });
            });

