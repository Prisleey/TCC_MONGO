        <!--============================= BOOKING DETAILS =============================-->
        <section class="light-bg booking-details_wrap">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 responsive-wrap">
                        <!-- DESCRICAO E CHECKBOX -->
                        <div class="booking-checkbox_wrap">	
                            <div class="row d-flex">
                                <form method="POST" action="/cadastro-estudio">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nome do Estúdio</label>
                                        <input type="text" class="form-control" id="nomeEstudio" name='nomeEstudio' placeholder="Nome do Estúdio" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="descEstudio">Descrição</label>
                                        <textarea class="form-control" rows='5' id="descEstudio" name='descricao' placeholder="Introduza seu estúdio" required></textarea>
                                    </div>
                                    <hr>
                                    <div class="form-group">
                                        <label for="estadoEstudio">Estado</label>
                                        <input type="text" class="form-control" id="estadoEstudio" name='estado' placeholder="Estado" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="cidadeEstudio">Cidade</label>
                                        <input type="text" class="form-control" id="cidadeEstudio" name='cidade' placeholder="Cidade" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="bairroEstudio">Bairro</label>
                                        <input type="text" class="form-control" id="bairroEstudio" name='bairro' placeholder="Bairro" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="ruaEstudio">Rua</label>
                                        <input type="text" class="form-control" id="ruaEstudio" name='rua' placeholder="Rua" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="CEPEstudio">CEP</label>
                                        <input type="text" class="form-control" id="CEPEstudio" name='cep' placeholder="CEP" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="TelEstudio">Telefone</label>
                                        <input type="text" class="form-control" id="TelEstudio" name='telefone' placeholder="Telefone" required>
                                    </div>
                                
                                    <hr>
                                
                                    <label>Dias de funcionamento:</label><br />
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="diaSemana" id="inlineCheckbox7" value="1" checked> Domingo
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="diaSemana" id="inlineCheckbox1" value="2" checked> Segunda
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="diaSemana" id="inlineCheckbox2" value="3" checked> Terça
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="diaSemana" id="inlineCheckbox3" value="4" checked> Quarta
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="diaSemana" id="inlineCheckbox4" value="5" checked> Quinta
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="diaSemana" id="inlineCheckbox5" value="6" checked> Sexta
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="diaSemana" id="inlineCheckbox6" value="7" checked> Sabado
                                        </label>
                                    </div>
                                    </br></br>
                                    <div class="form-group">
                                        <label for="horarioFuncionamento">Horário de Funcionamento:</label>
                                        <input type="text" class="form-control" id="horarioFuncionamento" name='horarioFuncionamento' placeholder="" readonly>
                                    </div>
                                    </br></br>
                                    <button type="submit" class="btn btn-primary">Cadastrar Estúdio</button>
                                </form>
